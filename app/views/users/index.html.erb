
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mobile</th>
      <th>House no</th>
      <th>Locality</th>
      <th>Pincode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mobile %></td>
        <td><%= user.house_no %></td>
        <td><%= user.locality %></td>
        <td><%= user.pincode %></td>
         
        
        <% if can? :read, User %>
        <td><%= link_to 'Show', user %></td>
        <% end %>
         <% if can? :update, User %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        <% if can? :delete, User %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
