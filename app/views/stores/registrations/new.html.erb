<div class="container">
 <div class="row">
          
              <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10"  id="bdr">
                  <h2 align="center" style="margin:0;">Store Sign Up</h2>
                   
                  <p style="padding:15px;"></p>




<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    
    <%= f.text_field :name, autofocus: true,placeholder: "Enter your Store name",class: "form-control" %>
  </div>
  <div class="form-group">    
    <%= f.email_field :email, autofocus: true , placeholder: "Enter your email" ,class: "form-control" %>
  </div>
  <div class="form-group">    
    <%= f.text_field :mobile, autofocus: true , placeholder: "Enter your Phone no",class: "form-control" %>
  </div>   

  <div class="form-group">
    
    <% if @minimum_password_length %>
    <em class="s">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off",  placeholder: "Enter your Password",class: "form-control" %>
  </div>

  <div class="form-group">   
    <%= f.password_field :password_confirmation, autocomplete: "off",  placeholder: "Confirm your Password",class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:" col-lg-2 btn btn-info btn-block" ,id: "b_signup" %>
  </div>
<% end %>
   
            <p style="margin-top:15px;font-size:15px;"> Already a Registered User ? <%= link_to 'Sign In',new_store_session_path %> </p>   
        </div>
     </div>
     </div>
<%= render "users/shared/links" %>
